<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <!-- Header con gradiente -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_header_gradient"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="32dp"
        android:paddingBottom="24dp">

        <TextView
            android:id="@+id/tvTitulo"
            style="@style/TitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tickets de Mantenimiento"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/tvSubtitulo"
            style="@style/SubtitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Panel de control y gestión de tickets"
            android:textColor="#E2E8F0" />

    </LinearLayout>

    <!-- Contenedor de estadísticas y filtros -->
    <LinearLayout
        android:id="@+id/containerStats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/colorBackground">

        <!-- Cards de estadísticas -->
        <LinearLayout
            android:id="@+id/statsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <!-- Total -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/bg_stat_card_total"
                android:padding="12dp"
                android:layout_marginEnd="8dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvTotalLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total"
                    android:textSize="11sp"
                    android:textColor="@color/colorTextSecondary"
                    android:fontFamily="sans-serif" />

                <TextView
                    android:id="@+id/tvTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorTextPrimary"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- Pendientes -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/bg_stat_card_pendiente"
                android:padding="12dp"
                android:layout_marginEnd="8dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvPendientesLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pendientes"
                    android:textSize="11sp"
                    android:textColor="@color/colorTextPrimary"
                    android:fontFamily="sans-serif" />

                <TextView
                    android:id="@+id/tvPendientes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorTextPrimary"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- En Progreso -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/bg_stat_card_progreso"
                android:padding="12dp"
                android:layout_marginEnd="8dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvProgresoLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="En Progreso"
                    android:textSize="11sp"
                    android:textColor="@color/colorTextPrimary"
                    android:fontFamily="sans-serif" />

                <TextView
                    android:id="@+id/tvProgreso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorTextPrimary"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- Cerrados -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/bg_stat_card_cerrado"
                android:padding="12dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvCerradosLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cerrados"
                    android:textSize="11sp"
                    android:textColor="@color/colorTextPrimary"
                    android:fontFamily="sans-serif" />

                <TextView
                    android:id="@+id/tvCerrados"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorTextPrimary"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Filtros y ordenamiento -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:weightSum="2">

            <!-- Spinner de filtro por estado -->
            <Spinner
                android:id="@+id/spinnerFiltroEstado"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_spinner_modern"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:popupBackground="@color/colorCard" />

            <!-- Spinner de ordenamiento -->
            <Spinner
                android:id="@+id/spinnerOrdenar"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/bg_spinner_modern"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:popupBackground="@color/colorCard" />

        </LinearLayout>

    </LinearLayout>

    <!-- SwipeRefreshLayout con RecyclerView -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/containerStats"
        android:layout_above="@+id/btnAgregar">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewTickets"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:clipToPadding="false"
            android:paddingBottom="8dp" />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <!-- Botón flotante moderno -->
    <Button
        android:id="@+id/btnAgregar"
        style="@style/PrimaryButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agregar Nuevo Ticket"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp" />

</RelativeLayout>
