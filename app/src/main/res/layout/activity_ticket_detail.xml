<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Card principal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_ticket_card"
            android:padding="24dp"
            android:elevation="4dp">

            <!-- Header con Sucursal y Prioridad -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/tvSucursal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sucursal X"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorTextPrimary"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/tvPrioridadBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ALTA"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:background="@drawable/bg_priority_high"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

            <!-- Categoría -->
            <TextView
                android:id="@+id/tvCategoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Electricidad"
                android:textSize="16sp"
                android:textColor="@color/colorAccent"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="12dp" />

            <!-- Estado -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <View
                    android:id="@+id/viewEstadoIndicator"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/bg_status_pendiente"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tvEstado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pendiente"
                    android:textSize="15sp"
                    android:textColor="@color/colorTextPrimary"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorCardStroke"
                android:layout_marginBottom="16dp" />

            <!-- Fecha -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha de Reporte"
                android:textSize="12sp"
                android:textColor="@color/colorTextSecondary"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvFecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20/11/2025"
                android:textSize="16sp"
                android:textColor="@color/colorTextPrimary"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="16dp" />

            <!-- Descripción -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descripción"
                android:textSize="12sp"
                android:textColor="@color/colorTextSecondary"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvDescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descripción del problema reportado"
                android:textSize="15sp"
                android:textColor="@color/colorTextPrimary"
                android:lineSpacingMultiplier="1.4"
                android:layout_marginBottom="16dp" />

            <!-- Técnico -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Técnico Asignado"
                android:textSize="12sp"
                android:textColor="@color/colorTextSecondary"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvTecnico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sin asignar"
                android:textSize="16sp"
                android:textColor="@color/colorTextPrimary"
                android:fontFamily="sans-serif" />

        </LinearLayout>

        <!-- Botones de acción -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/btnEditar"
                style="@style/PrimaryButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Editar Ticket"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/btnCambiarEstado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cambiar Estado"
                android:background="@drawable/bg_secondary_button"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:padding="14dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>

