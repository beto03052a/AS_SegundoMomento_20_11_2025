<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_ticket_card"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical"
    android:padding="20dp"
    android:elevation="3dp"
    android:stateListAnimator="@null">

    <!-- Fila superior: Sucursal y Badge de Prioridad -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvSucursal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sucursal X"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/colorTextPrimary"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="-0.01" />

        <TextView
            android:id="@+id/tvPrioridadBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ALTA"
            android:textSize="11sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_priority_high"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.05" />

    </LinearLayout>

    <!-- Categoría -->
    <TextView
        android:id="@+id/tvCategoriaPrioridad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Electricidad"
        android:textSize="14sp"
        android:textColor="@color/colorAccent"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="8dp" />

    <!-- Estado y Fecha -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="6dp">

        <View
            android:id="@+id/viewEstadoIndicator"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/bg_status_pendiente"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/tvEstadoFecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pendiente • 20/11/2025"
            android:textSize="13sp"
            android:textColor="@color/colorTextSecondary"
            android:fontFamily="sans-serif" />

    </LinearLayout>

    <!-- Descripción -->
    <TextView
        android:id="@+id/tvDescripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Descripción corta del problema reportado"
        android:textSize="14sp"
        android:textColor="@color/colorTextSecondary"
        android:layout_marginTop="12dp"
        android:lineSpacingMultiplier="1.3"
        android:maxLines="2"
        android:ellipsize="end" />

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorCardStroke"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp" />

    <!-- Técnico -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">


        <TextView
            android:id="@+id/tvTecnico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sin asignar"
            android:textSize="13sp"
            android:textColor="@color/colorTextTertiary"
            android:fontFamily="sans-serif" />

    </LinearLayout>

</LinearLayout>
